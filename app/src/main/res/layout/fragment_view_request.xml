    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="15dp"
        app:strokeWidth="0.3dp"
        app:strokeColor="@color/black"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:padding="4dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_title_24"
            />
        <EditText
            android:layout_width="275dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:hint="@string/user_title"
            android:textSize="13sp"
            android:textStyle="bold"
            android:id="@+id/title_add"
            />

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        app:strokeWidth="0.3dp"
        app:strokeColor="@color/black"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:padding="4dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_place_24"
            />
        <EditText
            android:layout_width="275dp"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:hint="@string/address"
            android:textSize="13sp"
            android:textStyle="bold"
            android:id="@+id/address_add"
            />

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        app:strokeWidth="0.3dp"
        app:strokeColor="@color/black"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_phone_android_24"
                />
            <EditText
                android:layout_width="275dp"
                android:layout_height="30dp"
                android:background="@null"
                android:layout_marginStart="10dp"
                android:hint="Contact"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/contact"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        app:strokeWidth="0.3dp"
        app:strokeColor="@color/black"
        >
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
            android:padding="4dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_description_24"
            />
        <EditText
            android:layout_width="275dp"
            android:layout_height="100dp"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:hint="@string/description"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="top"
            android:id="@+id/description_add"
            />

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status : "
                    android:layout_marginStart="15dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/spartanreg"/>
                <EditText
                    android:layout_width="275dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:layout_marginStart="13dp"
                    android:hint="status of your request"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:inputType="text"
                    android:id="@+id/status"
                    />

            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pB"
            android:visibility="invisible"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />
    </FrameLayout>


    <com.google.android.material.button.MaterialButton
        android:layout_width="200dp"
        android:layout_height="65dp"
        android:text="@string/update_loc"
        android:textSize="13sp"
        android:fontFamily="@font/spartanmedium500"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:id="@+id/add_location"
        app:backgroundTint="#1B2C4C"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        />



</LinearLayout>